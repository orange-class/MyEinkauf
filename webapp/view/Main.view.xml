<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:mu="sap.suite.ui.microchart" controllerName="qstMyEinkauf.controller.Main">
	<IconTabBar id="IconTabBar01" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" tabDensityMode="Compact">
		<items>
			<IconTabFilter icon="sap-icon://activity-items" text="Einkaufslisten" key="lists">
				<SplitApp id="rootControl"></SplitApp>
			</IconTabFilter>
			<!-- -->
			<IconTabFilter icon="sap-icon://product" text="Waren" key="wares">
				<content>
					<Page title="Übersicht aller möglichen Waren">
						<headerContent>
							<Button tooltip="Neue Waren anlegen" icon="sap-icon://add-product" press="openDialogAddProduct"/>
						</headerContent>
						<l:VerticalLayout id="containerLayout">
						</l:VerticalLayout>
						<List id="list_item" items="{EinkaufBackend>/ProdListSet}">
							<!-- delete="handleDelete" selectionChange="onSelectionChange" -->
							<items>
								<StandardListItem title="{EinkaufBackend>ProdName}" info="{EinkaufBackend>ProdUnit}" type="Active"/>
								<!-- press="onSelectionChange" -->
							</items>
						</List>
					</Page>
				</content>
			</IconTabFilter>
			<!-- -->
			<IconTabFilter icon="sap-icon://business-objects-experience" text="Statistik-Center" key="statistics">
				<Text text="Hier könnte sich später das Statistik-Center befinden."/>
			</IconTabFilter>
		</items>
	</IconTabBar>
</mvc:View>