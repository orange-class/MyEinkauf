<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mu="sap.suite.ui.microchart">
	<IconTabBar id="IconTabBar01" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" tabDensityMode="Compact">
		<items>
			<IconTabFilter icon="sap-icon://activity-items" text="Einkaufslisten" key="lists">
				<SplitApp id="rootControl"></SplitApp>
			</IconTabFilter>
			<!-- -->
			<IconTabFilter icon="sap-icon://product" text="Waren" key="wares">
				<Title text="Übersicht aller möglichen Waren" />
				<l:VerticalLayout id="containerLayout" width="100%">
					<Text text="Neben der Übersicht könnte sich später hier noch die Möglichkeit finden, diese anzulegen."/>
				</l:VerticalLayout>
			</IconTabFilter>
			<!-- -->
			<IconTabFilter icon="sap-icon://business-objects-experience" text="Statistik-Center" key="statistics">
				<Text text="Hier könnte sich später das Statistik-Center befinden."/>
			</IconTabFilter>
		</items>
	</IconTabBar>
</mvc:View>