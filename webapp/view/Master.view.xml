<mvc:View 
	controllerName="qstMyEinkauf.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" >
	<Page title="Meine Einkaufslisten">
		<ComboBox  id="box_master">
			<items>
				<core:ListItem text="Ersteller" key="item_ersteller" id="combo_ersteller"/>
				<core:ListItem text="Zeit" key="item_zeit" id="combo_zeit"/>
			</items>
		</ComboBox>
		<VBox>
			<core:Icon src="sap-icon://add" color="#031E48"/>
		</VBox>

		<List id="el" items="{beispiel>/orders}"
			
		    mode="SingleSelectMaster"
			selectionChange="onSelectionChange"
			delete="handleDelete"> 
			
			<items>
				<StandardListItem
					title="{beispiel>orderName}" 
					description="{beispiel>owner}"
					info="{beispiel>changeDate}"
					type="Active"
					press="onSelectionChange"/>
		
			</items>
		</List>
	</Page>
</mvc:View>