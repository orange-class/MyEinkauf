<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns="sap.m" controllerName="qstMyEinkauf.controller.Master">
	<Page title="Meine Einkaufslisten">
		<headerContent>
			<Button tooltip="Neue Liste anlegen" icon="sap-icon://add-activity-2" press="openDialogAddList"/>
			<Button tooltip="Sortierung Filterung löschen" icon="sap-icon://undo" press="onReset"/>
		</headerContent>
		<!-- Sortieren -->
		<l:HorizontalLayout class="sapUiContentPadding" allowWrapping="true">
			<Label text="Sortieren nach" width="150px"/>
			<ComboBox id="box_master_sort" maxWidth="40%" selectionChange="onSelectSort">
				<items>
					<core:ListItem text="Ersteller" key="item_ersteller" id="combo_ersteller"/>
					<core:ListItem text="Zuletzt geändert" key="item_zeit" id="combo_zeit"/>
				</items>
			</ComboBox>
		</l:HorizontalLayout>
		<!-- Filtern -->
		<l:HorizontalLayout class="sapUiContentPadding" allowWrapping="true">
			<Label text="Filtern nach Ersteller"  width="150px"/>
			<ComboBox id="box_master_owner" maxWidth="40%" items="{EinkaufBackend>/ListsSet}" selectionChange="onSelectName">
				<items>
					<core:ListItem text="{EinkaufBackend>CreatorName}" key="item_name" id="combo_name"/>
				</items>
			</ComboBox>
		</l:HorizontalLayout>
		<!-- Liste -->
		<List id="el" items="{path: 'EinkaufBackend>/ListsSet'}" mode="SingleSelectMaster" selectionChange="onSelectionChange" delete="handleDelete"> <!-- , sorter: {path: 'ListsSet/Title'}-->
			<items>
				<StandardListItem title="{EinkaufBackend>Title}" description="{EinkaufBackend>CreatorName}" info="{EinkaufBackend>ChangeDate}" type="Active"
					press="onSelectionChange"/>
			</items>
		</List>
		<content/>
	</Page>
</mvc:View>