<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="qstMyEinkauf.controller.ListDetails">
	<Page contentOnlyBusy="true" showHeader="false" id="page01">
		<!-- navButtonPress="onNavBack" showNavButton="{device>/system/phone}"  -->
		<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
			<f:toolbar>
				<Toolbar id="TB1">
					<Button icon="sap-icon://nav-back" press="onNavBack"/>
					<Title id="Title1" text="{EinkaufBackend>Title}"/>
					<ToolbarSpacer/>
					<Button id="buttonToSettings" tooltip="Einstellungen" icon="sap-icon://settings" press="onToSettings"/> <!-- icon="sap-icon://action-settings" -->
					<!--<Button icon="sap-icon://drop-down-list" />-->
				</Toolbar>
			</f:toolbar>
			<f:layout> <!-- hier lässt sich einstellen, wie alle Elemente angeordnet sind -->
				<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer ariaLabelledBy="Title2">
					<f:toolbar>
						<Toolbar>
							<Title id="Title2" text="von {EinkaufBackend>CreatorName}"/>
							<ToolbarSpacer/>
							<Text text="Zuletzt bearbeitet: {EinkaufBackend>ChangerName} {EinkaufBackend&gt;ChangeDate}"/>
						</Toolbar>
					</f:toolbar>
					<!--<f:formElements>
						<f:FormElement label="Country">
							<f:fields>
								<Select width="100%" id="country" selectedKey="{Country}">
									<items>
										<core:Item text="Germany" key="Germany"/>
										<core:Item text="USA" key="USA"/>
										<core:Item text="England" key="England"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
					</f:formElements>-->
				</f:FormContainer>
				<f:FormContainer ariaLabelledBy="Title3">
					<f:toolbar> 
						<Toolbar> 
							<Title id="Title3" text="Einträge"/> 
							<ToolbarSpacer/> 
							<Button id="addProduct" tooltip="Eintrag hinzufügen" icon="sap-icon://add-product" press="openDialogAddItem"/> <!-- Funktionalität! --> 
							<Button id="removeProduct" tooltip="Eintrag löschen" icon="sap-icon://delete" press="onItemDelete"/> <!-- Funktionalität! -->
							<Button id="hideProduct" tooltip="Erledigtes ausblenden" icon="sap-icon://hide"/> <!-- Funktionalität! text="Abgeschlossenes ausblenden" -->
						</Toolbar>
					</f:toolbar>
					<f:formElements>
						<f:FormElement>
							<t:Table id="table_details" alternateRowColors="true" enableCellFilter="true" showColumnVisibilityMenu="true" >
								<t:columns>
									<t:Column sortProperty="ProdName">
										<t:label>
											<Label text="Product" id="label_productName"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>ProdName}" id="text_productName"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ItemIquant">
										<t:label>
											<Label text="IST" id="label_quantityProvided"/>
										</t:label>
										<t:template>
											<Input value="{EinkaufBackend>ItemIquant}" id="text_quantityProvided"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ItemSquant">
										<t:label>
											<Label text="SOLL" id="label_quantityRequested"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>ItemSquant}" id="text_quantityRequested"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ProdUnit">
										<t:label>
											<Label text="Einheit" id="label_unit"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>ProdUnit}" id="text_unit"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="CreatorName">
										<t:label>
											<Label text="Ersteller" id="label_owner"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>CreatorName}" id="text_owner"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ChangeDate">
										<t:label>
											<Label text="Änderungsdatum" id="label_datum"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>ChangeDate}" id="text_datum"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ChangerName">
										<t:label>
											<Label text="Bearbeiter" id="label_bearbeiter"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>ChangerName}" id="text_bearbeiter"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="FinisherName">
										<t:label>
											<Label text="Abschließer" id="label_abschliesser"/>
										</t:label>
										<t:template>
											<Text text="{EinkaufBackend>FinisherName}" id="text_abschliesser"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</Page>
</mvc:View>